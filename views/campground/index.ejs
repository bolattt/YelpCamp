<% layout('layout/boilerplate') %>

<div id="map" style="width:100%;height:500px"></div>
<h1>    All campgrounds</h1>
<a href="/campgrounds/new">List a new camp</a>

<% for(let camp of camps){ %> 
   <div class="card mb-3">
       <div class="row">
          
            <div class="col-md-4">
                <% if(camp.images.length){  %> 
                 <img src="<%=camp.images[0].url%>" alt="" class="img-fluid">
                <% }else{ %> 
                    <img src="https://images.unsplash.com/photo-1597071118769-3d970bd1652b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1598&q=80" alt="" class="img-fluid">
                <% } %> 
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %> </h5>
                    <p class="card-text"><%= camp.description%></p>
                    <p class="card-text">
                        <small class="card-text text-muted">
                            <%= camp.location %> 
                        </small>
                    </p>
                  
                    <a class='btn btn-primary btn-sm' href="/campgrounds/<%= camp._id %> ">
                        View <%= camp.title %> 
                    </a>
                </div>
            </div>
        </div>
   </div>

<% } %> 
<script>
    const mapboxToken = '<%-process.env.MAPBOX_TOKEN %>';
    const campgrounds = {features:<%- JSON.stringify(camps) %>}
</script>
<script src='/js/clusterMap.js'></script>

