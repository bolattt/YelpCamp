<% layout('layout/boilerplate') %>
      
<h1>    All campgrounds</h1>
<a href="/campgrounds/new">List a new camp</a>

<% for(let camp of camps){ %> 
   <div class="card mb-3">
       <div class="row">
          
            <div class="col-md-4">
                 <img src="<%=camp.images[0].url%>" alt="" class="img-fluid">
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %> </h5>
                    <p class="card-text"><%= camp.description%></p>
                    <p class="card-text">
                        <small class="card-text text-muted">
                            <%= camp.location %> 
                        </small>
                    </p>
                  
                    <a class='btn btn-primary btn-sm' href="/campgrounds/<%= camp._id %> ">
                        View <%= camp.title %> 
                    </a>
                </div>
            </div>

         

        </div>
   </div>

<% } %> 

